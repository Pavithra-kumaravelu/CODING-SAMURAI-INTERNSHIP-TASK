import requests

def get_weather(city_name, api_key):
    url = "http://api.openweathermap.org/data/2.5/weather"
    params = {
        'q': city_name,
        'appid': api_key,         
        'units': 'metric'
    }

    try:
        response = requests.get(url, params=params)
        response.raise_for_status()

        data = response.json()
        if data.get("cod") != 200:
            print(f"âš ï¸ Error: {data.get('message')}")
            return

        print(f"\nğŸ“ Location: {data['name']} - {data['sys']['country']}")
        print(f"ğŸŒ¡ï¸ Temperature: {data['main']['temp']} Â°C")
        print(f"ğŸ’§ Humidity: {data['main']['humidity']}%")
        print(f"ğŸŒ¬ï¸ Wind Speed: {data['wind']['speed']} m/s")
        print(f"ğŸŒ¥ï¸ Weather: {data['weather'][0]['description'].title()}")

    except requests.exceptions.RequestException as e:
        print("âš ï¸ Network error:", e)

def main():
    print("=== ğŸŒ¤ï¸ Weather App ===")
    city = input("Enter city name: ").strip()
    api_key = "be862be2a0f7c0a68ed61e02ba16457d"  # ğŸ› ï¸ Replace this

    if not city:
        print("âš ï¸ City name cannot be empty.")
        return

    get_weather(city, api_key)

if __name__ == "__main__":
    main()
